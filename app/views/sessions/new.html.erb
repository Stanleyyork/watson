<%= render partial: '/layouts/nav' %>
<div class="row">
	<div class="col-md-12 banner text-center">
		<div class="half-banner"></div>
	</div>
	<div class="col-xs-10 col-sm-7 col-md-4 col-xs-offset-1 col-sm-offset-4  col-md-offset-4 login-form">
		<div class="headers text-center">
		<h1>Login</h1>
	</div>	

	<%= form_for :user, url: '/login' do |f| %>
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: "form-control" %>
		</div>
		<div class="form-group">	
			<%= f.label :password %>
			<%= f.password_field :password, class: "form-control" %>
		</div>
		<div class="form-group">	 
			<%= f.submit "Submit", class: 'btn btn-default' %><br><br>
		</div>
	<% end %>
</div>