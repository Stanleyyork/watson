<div class="row">
	<div class="col-sm-3 user-bar">
		<div class="profile-headers text-center"><%= @user.name %></div>
		<%= image_tag @user.avatar.url(:medium), class: "img-responsive avatar img-rounded image-resize"%>
		<h5 class="text-muted text-center"> Joined on <%= @user.created_at.to_date.to_formatted_s(:long_ordinal) %></h5>
		<%= link_to "Edit profile", "/users/#{current_user.id}/edit" %>
	</div>
	<span class="col-sm-3">
	<b><%= "Big 5" %></b>
	<% @big_5.reverse.each do |attribute| %>
		<li><%= "#{attribute[0]}: #{(attribute[1].to_f*100).round(2)}%" %></li>
	<% end %>
	</span>
	<span class="col-sm-3">
	<b><%= "Needs" %></b>
	<% @needs.reverse.each do |attribute| %>
		<li><%= "#{attribute[0]}: #{(attribute[1].to_f*100).round(2)}%" %></li>
	<% end %>
	</span>
	<span class="col-sm-3">
	<b><%= "Values" %></b>
	<% @values.reverse.each do |attribute| %>
		<li><%= "#{attribute[0]}: #{(attribute[1].to_f*100).round(2)}%" %></li>
	<% end %>
	</span>
</div>